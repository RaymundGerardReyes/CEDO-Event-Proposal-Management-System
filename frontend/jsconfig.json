{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@components/*": [
        "./src/components/*"
      ],
      "@hooks/*": [
        "./src/hooks/*"
      ],
      "@utils/*": [
        "./src/utils/*"
      ],
      "@lib/*": [
        "./src/lib/*"
      ],
      "@contexts/*": [
        "./src/contexts/*"
      ]
    },

    "jsx": "react-jsx",
    "lib": [
      "es6",
      "dom",
      "dom.iterable",
      "es2017"
    ],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "**/*.js",
    "**/*.jsx",
    ".next/types/**/*.ts",
    ".babel.config.js"
, "vitest.config.js"  ],
  "exclude": [
    "node_modules",
    "**/*.ts",
    "**/*.tsx",
    ".next/cache",
    "out",
    "dist"
  ]
}