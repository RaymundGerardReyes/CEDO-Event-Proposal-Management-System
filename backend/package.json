{
    "name": "cedo-partnership-management-backend",
    "version": "1.0.0",
    "description": "Backend API for CEDO Partnership Proposal Management System",
    "main": "server.js",
    "keywords": [
        "education",
        "partnership",
        "proposals",
        "management",
        "api"
    ],
    "author": "CEDO Team",
    "license": "MIT",
    "engines": {
        "node": ">=18.17.0",
        "npm": ">=8.0.0"
    },
    "scripts": {

        "start": "node server.js",
        "start:minimal": "node server-minimal.js",
        "start:cluster": "node cluster.js",
        "start:prod": "NODE_ENV=production node server.js",
        "dev": "nodemon server.js",
        "dev:minimal": "nodemon server-minimal.js",
        "dev:cluster": "nodemon cluster.js",
        "build": "node -e \"console.log('No backend build step; JS runtime only')\"",
        "init-db": "node scripts/init-db.js",
        "init-postgres": "node scripts/init-postgres.js",
        "apply-schema": "node scripts/run-schema.js",
        "migrate:email-constraints": "node scripts/migrate-2025-09-18-email-constraints.js",
        "test": "vitest",
        "test:run": "vitest run",
        "test:coverage": "vitest run --coverage",
        "test:watch": "vitest --watch",
        "test:ui": "vitest --ui",
        "test:api": "vitest run --testNamePattern=api",
        "test:db": "vitest run --testNamePattern=db",
        "test-postgres": "node scripts/test-postgres-connection.js",
        "test-hybrid": "node test-hybrid-architecture.js",
        "test-hybrid:verbose": "DEBUG=* node test-hybrid-architecture.js",
        "lint": "echo 'Linting with ESLint...' && exit 0",
        "lint:fix": "echo 'Fixing linting issues...' && exit 0",
        "logs": "tail -f logs/*.log",
        "monitor": "node scripts/monitor-performance.js",
        "benchmark": "node scripts/benchmark.js",
        "health": "curl http://localhost:5000/health || node -e \"console.log('Server not running on port 5000')\"",
        "clean": "rm -rf logs/*.log uploads/temp/* node_modules/.cache",
        "docker:build": "docker build -t cedo-backend .",
        "docker:run": "docker run -p 5000:5000 cedo-backend"
    },
    "dependencies": {
        "@google-cloud/recaptcha-enterprise": "^6.2.0",
        "axios": "^1.6.8",
        "bcryptjs": "^2.4.3",
        "compression": "^1.7.4",
        "cookie-parser": "^1.4.7",
        "cookie-session": "^2.1.0",
        "cors": "^2.8.5",
        "dotenv": "^16.5.1",
        "express": "^4.19.2",
        "express-rate-limit": "^7.5.1",
        "express-session": "^1.18.1",
        "express-validator": "^7.2.0",
        "google-auth-library": "^10.2.0",
        "helmet": "^7.0.0",
        "ioredis": "^5.6.1",
        "json-2-csv": "^5.5.9",
        "jsonwebtoken": "^9.0.2",
        "lru-cache": "^10.4.0",
        "morgan": "^1.10.0",
        "multer": "^2.0.2",
        "node-cache": "^5.1.2",
        "nodemailer": "^6.9.18",
        "passport": "^0.7.0",
        "passport-google-oauth20": "^2.0.0",
        "pg": "^8.11.3",
        "pg-pool": "^3.6.1",
        "uuid": "^10.0.0",
        "winston": "^3.17.0"
    },
    "devDependencies": {
        "@vitest/coverage-v8": "^3.2.4",
        "form-data": "^4.0.2",
        "glob": "^10.3.10",
        "nodemon": "^3.1.10",
        "supertest": "^7.1.1",
        "vitest": "^3.2.4"
    }
}
