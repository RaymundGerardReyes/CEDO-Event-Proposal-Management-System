[mysqld]
# Development MySQL Configuration
# Optimized for development with debugging capabilities

# Performance settings (lighter for development)
innodb_buffer_pool_size = 256M
innodb_log_file_size = 64M
innodb_flush_log_at_trx_commit = 1
max_connections = 100

# Query cache (smaller for development)
query_cache_type = 1
query_cache_size = 32M
tmp_table_size = 32M
max_heap_table_size = 32M
sort_buffer_size = 1M
join_buffer_size = 1M

# Security (relaxed for development)
skip-name-resolve
bind-address = 0.0.0.0

# Logging (enhanced for debugging)
general_log = 1
general_log_file = /var/log/mysql/general.log
slow_query_log = 1
slow_query_log_file = /var/log/mysql/slow.log
long_query_time = 1  # Log queries slower than 1 second
log_queries_not_using_indexes = 1

# Error logging
log_error = /var/log/mysql/error.log
log_warnings = 2

# Binary logging (for replication testing)
log_bin = /var/log/mysql/mysql-bin.log
expire_logs_days = 7
max_binlog_size = 100M

# Character set
character_set_server = utf8mb4
collation_server = utf8mb4_unicode_ci

# Time zone
default_time_zone = '+00:00'

# Development specific settings
sql_mode = STRICT_TRANS_TABLES,NO_ZERO_DATE,NO_ZERO_IN_DATE,ERROR_FOR_DIVISION_BY_ZERO 