[mysqld]
# Production MySQL Configuration for MySQL 8.0
# Optimized for production workloads

# Performance settings (optimized for production)
innodb_buffer_pool_size = 1G
innodb_redo_log_capacity = 512M
innodb_flush_log_at_trx_commit = 1
max_connections = 300

# Removed deprecated query cache (not available in MySQL 8.0)
# query_cache_type and query_cache_size are deprecated
tmp_table_size = 128M
max_heap_table_size = 128M
sort_buffer_size = 2M
join_buffer_size = 2M

# Security (production hardened)
skip-name-resolve
skip-host-cache
bind-address = 0.0.0.0

# Logging (minimal for production)
general_log = 0
slow_query_log = 1
slow_query_log_file = /var/log/mysql/slow.log
long_query_time = 2  # Log queries slower than 2 seconds
log_queries_not_using_indexes = 0

# Error logging
log_error = /var/log/mysql/error.log
log_error_verbosity = 2

# Binary logging (for backup and replication)
log_bin = /var/log/mysql/mysql-bin.log
expire_logs_days = 3
max_binlog_size = 500M
binlog_expire_logs_seconds = 259200  # 3 days

# Character set
character_set_server = utf8mb4
collation_server = utf8mb4_unicode_ci

# Time zone
default_time_zone = '+00:00'

# Production specific settings
sql_mode = STRICT_TRANS_TABLES,NO_ZERO_DATE,NO_ZERO_IN_DATE,ERROR_FOR_DIVISION_BY_ZERO

# Authentication
default_authentication_plugin = mysql_native_password

# InnoDB settings for production
innodb_file_per_table = 1
innodb_flush_method = O_DIRECT
innodb_lock_wait_timeout = 50

# Connection settings
wait_timeout = 600
interactive_timeout = 600

# MyISAM settings
key_buffer_size = 64M

# Table cache
table_open_cache = 4000
table_definition_cache = 2000 